{
  "name": "@geoffereth/devcon",
  "version": "0.0.2",
  "description": "An opinionated wrapper around devcontainers/cli",
  "type": "module",
  "keywords": [
    "devcontainer",
    "docker",
    "git-worktree",
    "development",
    "workspace",
    "cli",
    "doppler",
    "secrets",
    "network-security"
  ],
  "bin": {
    "devcon": "dist/devcon.js"
  },
  "files": [
    "dist/",
    "scripts/",
    ".devcontainer/",
    "README.md"
  ],
  "scripts": {
    "dev": "tsx src/devcon.ts",
    "build": "tsc",
    "prepublishOnly": "pnpm run build",
    "postinstall": "echo '\nâœ… devcon installed! Run \"devcon\" to see available commands.\n'"
  },
  "dependencies": {
    "tsx": "^4.19.0"
