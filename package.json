  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "^5.6.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gadogado/devcon.git"
  },
  "homepage": "https://github.com/gadogado/devcon#readme",
  "bugs": {
    "url": "https://github.com/gadogado/devcon/issues"
  },
  "author": "Geoff Ereth",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "preferGlobal": true,
  "packageManager": "pnpm@9.0.0",
  "os": [
    "darwin",
    "linux"
  ]
